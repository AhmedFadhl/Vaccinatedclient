@model IEnumerable<Vaccinatedclient.Models.hospital>


<div class="main">
    <div class="main_top">
        <img src="~/images/element223111-9f3.svg" alt="user">
        <h2> المستشفيات والمراكز </h2>
    </div>
    <hr>
    <div class="main_middel">
        <button><a asp-action="add_hospital" asp-controller="Hospitals">إضافة</a></button>
        <hr>
    </div>
    <div class="main_bottom">
        <table class="table_toggler" id="dtable">
            <thead>
                <tr>
                    <th>رقم المركز</th>
                    <th>أسم المركز</th>
                    <th>أسم النوع</th>
                    <th>المدينه </th>
                    <th>المنطقة </th>
                    <th>العمليات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.ID</td>
                        <td>@item.name</td>
                        @if (item.hospital_Type!= null){

                        <td>@item.hospital_Type.type</td>
                        }else{

                        <td>"لايوجد معلومات"</td>
                        }
                        @if (item.city!= null){

                        <td>@item.city.name</td>
                        }else{

                        <td>"لايوجد معلومات"</td>
                        }
                        <td>@item.address</td>
                        <td class="management">
                            <span class="edit"><a href="@Url.Action("Edit_hospital", "Hospitals",new{id=@item.ID})">
                                    <img alt=@item.name src="~/images/draw.png"> </a>
                            </span>
                            <span class="delet"><a href="@Url.Action("Delete_hospital", "Hospitals",new{id=@item.ID})">
                                    <img alt=@item.name src="~/images/trash.png"> </a>
                            </span>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>